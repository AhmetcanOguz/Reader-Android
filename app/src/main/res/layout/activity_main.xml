<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#348dc4">


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/text1"
              android:text="Hemen şimdi başla"
              android:textSize="40dp"
              android:textStyle="bold"
              android:textColor="#ddd"
              android:gravity="center"
              android:layout_marginTop="100dp"
              android:layout_marginLeft="50dp"
              android:layout_marginRight="50dp"

    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/text2"
              android:text="Turasistan ile özgürlük her yerde"
              android:layout_below="@+id/text1"
              android:textSize="22dp"
              android:textStyle="bold"
              android:textColor="#ddd"
              android:gravity="center"
              android:layout_marginTop="105dp"
              android:layout_marginLeft="120dp"
              android:layout_marginRight="120dp"
              android:layout_centerInParent="true"/>
    <Button android:layout_width="400dp"
            android:layout_height="55dp"
            android:id="@+id/girisyap"
            android:textSize="25sp"
            android:text="Giriş Yap"
            android:layout_above="@+id/deneyin"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#3867B4"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp"

    />

    <Button android:layout_width="400dp"
            android:layout_height="55dp"
            android:id="@+id/deneyin"
            android:textSize="20sp"
            android:text="Deneyin"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:background="#3867B4"
            android:layout_marginTop="5dp" android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp" tools:ignore="PrivateResource"
            android:layout_alignParentBottom="true"
    />





</RelativeLayout>